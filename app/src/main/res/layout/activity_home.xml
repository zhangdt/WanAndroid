<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.abner.wanandroid.view.MyViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/home_bnv"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sise.abner.abaselib.View.NoShiftBottomNavigationView
        android:id="@+id/home_bnv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/gray"
        android:elevation="8dp"
        app:itemIconTint="@drawable/bottom_bar_tint_list"
        app:itemTextColor="@color/bottom_bar_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>